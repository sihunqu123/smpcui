{
  "root": true,
  "overrides": [
    {
      "files": ["*.ts"],
      "parserOptions": {
        "project": [
          "tsconfig.app.json",
          "tsconfig.spec.json",
          "e2e/tsconfig.json"
        ],
        "createDefaultProgram": true
      },
      "extends": [
        "plugin:@angular-eslint/recommended",
        // This is required if you use inline templates in Components
        "plugin:@angular-eslint/template/process-inline-templates",
        // "plugin:angular/johnpapa", // this is for angularJS
        "airbnb-base",
        "airbnb-typescript/base"
      ],
//    "settings": {
//      "import/extensions": [".js",".jsx",".ts",".tsx"],
//      "import/parsers": {
//        "@typescript-eslint/parser": [".ts",".tsx"]
//      },
//      "import/resolver": {
//        "node": {
//          "extensions": [".js",".jsx",".ts",".tsx"]
//        }
//      }
//    },
      "rules": {
        /**
         * Any TypeScript source code (NOT TEMPLATE) related rules you wish to use/reconfigure over and above the
         * recommended set provided by the @angular-eslint project would go here.
         */
        "@angular-eslint/directive-selector": [
          "off",
          { "type": "attribute", "prefix": "app", "style": "camelCase" }
        ],
        "@angular-eslint/no-empty-lifecycle-method": "off",
        "@angular-eslint/component-class-suffix": "off",
        "@typescript-eslint/naming-convention": "off",
        "max-len": "off",
        "camelcase": "off",
        "no-plusplus": "off",
        "no-underscore-dangle": "off",
        // "@typescript-eslint/indent": ["warn", 2, { "comment": "off" }],
        // "indent": ["error", 2, { "comments": "off" }],
//      "indent": ["error", 2, {
//        "ignoreComments": true
//      }],
//      "indent": "off", // we use @typescript-eslint/indent instead. refer: https://github.com/typescript-eslint/typescript-eslint/blob/main/packages/eslint-plugin/docs/rules/indent.md
//      "@typescript-eslint/indent": ["warn", 0, {
//        "ignoreComments": true
//      }],
        "spaced-comment": "off",
        "import/extensions": [
          "error",
          "ignorePackages",
          {
//          "": "never",  // used to fix 'import/extensions' error. refer: https://github.com/import-js/eslint-plugin-import/issues/1573#issuecomment-940724384
            "jsx": "never",
            "mjs": "never",
            "ts": "never",
            "tsx": "never",
            "js": "never"
          }
        ],
        "@angular-eslint/component-selector": [
          "off",
          { "type": "element", "prefix": "app", "style": "kebab-case" }
        ]
      }
    },
    {
      "files": ["*.html"],
      "extends": ["plugin:@angular-eslint/template/recommended"],
      "rules": {
        /**
         * Any template/HTML related rules you wish to use/reconfigure over and above the
         * recommended set provided by the @angular-eslint project would go here.
         */
      }
    }
  ]
}
